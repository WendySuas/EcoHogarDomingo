
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grupo11.ecohogar.DatosEnergia">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="247dp"
                android:layout_height="33dp"
                android:text="DATOS DE CONSUMO DE ENERGIA "
                android:textSize="15dp"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="282dp"
                    android:layout_height="49dp"
                    android:text="Selecione un ambiente:"
                    android:textSize="15dp"
                     />

            </LinearLayout>


           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="154dp">
               <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                   android:id="@+id/datosEst"
                   android:layout_width="fill_parent"
                   android:layout_height="151dp"
                   android:orientation="vertical">

                   <ListView
                       android:id="@+id/lvListasensores"
                       android:layout_width="match_parent"
                       android:layout_height="145dp"></ListView>

               </LinearLayout>

           </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Datos estadisticos por ambiente"
        android:textSize="15dp"
        />
</LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/sp01"
                    android:layout_width="328dp"
                    android:layout_height="13dp"

                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="0.94" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/datosHabitacion"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_datos_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="datos por habitacion" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

